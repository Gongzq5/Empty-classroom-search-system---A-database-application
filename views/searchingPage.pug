  body
    #main
    |
    #topbar
      span#logo_s 空闲教室查询
      |       
      span#usernameShow
      |       
      button#logout 登出
    |     
    |     
    br
    br
    br
    |     
    |     
    #logo
      //- img(src="images/logo.jpg")
    |     
    form#content(method="get")
      h3 查询空课室 
      hr
      .row
        label 选择课室楼栋
        |
        select(name="building")
          option(value="any") 不限
          |
          option(value="A") A
          |           
          option(value="B") B
          |           
          option(value="C") C
          |           
          option(value="D") D
          |           
          option(value="E") E
      |
      .row
        label 输入课室号
        |
        input(type='text',name='classroomNumber')
      |
      .row
        label 选择星期
        |         
        select(name="day")
          option(value="any") 不限
          |
          option(value="MON") 周一
          |           
          option(value="TUES") 周二
          |           
          option(value="WED") 周三
          |           
          option(value="THURS") 周四
          |           
          option(value="FRI") 周五
          |           
          option(value="SAT") 周六
          |           
          option(value="SUN") 周日
      |       
      .row
        label 起始节数
        |         
        select#startJ(name="startJ")
          option(value="any") 不限
          |
          option(value="1") 1
          |           
          option(value="2") 2
          |           
          option(value="3") 3
          |           
          option(value="4") 4
          |           
          option(value="5") 5
          |           
          option(value="6") 6
          |           
          option(value="7") 7
          |           
          option(value="8") 8
          |           
          option(value="9") 9
          |           
          option(value="10") 10
          |           
          option(value="11") 11
      |       
      .row
        label 结束节数
        |         
        select#endJ(name="endJ")
          option(value="any") 不限
          |
          option(value="1") 1
          |           
          option(value="2") 2
          |           
          option(value="3") 3
          |           
          option(value="4") 4
          |           
          option(value="5") 5
          |           
          option(value="6") 6
          |           
          option(value="7") 7
          |           
          option(value="8") 8
          |           
          option(value="9") 9
          |           
          option(value="10") 10
          |           
          option(value="11") 11
      |       
      input(type="submit")
      |       
      input(type="reset")
